package com.sinse.shopadmin.product.view;

public class Test {
	public static void main(String[] args) {
		
		String path = "C://test/babo/mario.test.jpg";
		int index = path.lastIndexOf(".");
		System.out.println("가장 마지막 점이 발견된 위치는 "+index);
		
		String ext= path.substring(index+1, path.length());
		System.out.println(ext);
		
		
		//1) 가장 마지막에 있는 .의 위치를 알아내자. lastIndexOf()
		
		//2) 가장 마지막 .의 위치 바로 다음 위치~마지막 위치까지 index번호를 알아내 추출한다.
		// 전체 문자열 중 일부 문자열 substring()
		
		String v = "a100";
		String v2 = "100";
		
		try {
			Integer.parseInt(v);
		} catch (NumberFormatException e) {
			e.printStackTrace();
		}
		
	}
}
