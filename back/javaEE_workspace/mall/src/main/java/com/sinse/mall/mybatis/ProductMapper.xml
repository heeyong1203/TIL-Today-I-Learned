<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Product">
	
	<insert id="insert" parameterType="Product">
		insert into product(product_name, brand, price, discount, introduce, detail, subcategory_id)
		values (#{product_name}, #{brand}, #{price}, #{discount}, #{introduce}, #{detail}, #{subCategory.subcategory_id})
		
		<!-- insert 하자마자, 현재 세션에서 일으킨 pk의 최대값 -->
		<selectKey keyColumn="product_id" keyProperty="product_id" resultType="int" order="AFTER">
			select last_insert_id() as product_id
		</selectKey>
	</insert>
	
	<sql id="columns">
		product_id, product_name, brand, price, discount, introduce, detail, subcategory_id
	</sql>
	
	<!-- Product 레코드를 수집하여 Product 모델 객체에 담아야 하나, colorList, sizeList, imgList와 일치하는 컬럼이 없으므로, 수동으로 직접 개발자가 나서서 매핑을 해야 한다. (이 때 사용 기능: resultMap) -->
	<resultMap	type="Product" 				id="joinMap">
		<id 			column="product_id" 		property="product_id"/>	
		<result	column="product_name" 	property="product_name"/>	
		<result 	column="brand" 				property="brand"/>	
		<result 	column="price" 				property="price"/>	
		<result 	column="discount" 			property="discount"/>	
		<result 	column="introduce" 			property="introduce"/>	
		<result 	column="detail" 				property="detail"/>		
		
			
		<!-- subCategory의 경우는 1:多 관계가 아닌 1:1 관계이므로 association으로 매핑하여야 한다. -->
		<association column="subcategory_id" property="subCategory" javaType="SubCategory" 
							select="SubCategory.select"/>
		
		<!-- 1:多 관계 매핑 -->
		<collection column="product_id" property="colorList" javaType="java.util.List" 
							ofType="ProductColor" select="ProductColor.selectByProductId"/>
							
		<!-- 1:多 관계 매핑 -->
		<collection column="product_id" property="sizeList" javaType="java.util.List" 
							ofType="ProductSize" select="ProductSize.selectByProductId"/>
							
		<!-- 1:多 관계 매핑 -->
		<collection column="product_id" property="imgList" javaType="java.util.List"
							ofType="ProductImg" select="ProductImg.selectByProductId"/>					
			
	</resultMap>
	
	<select id="selectAll" resultMap="joinMap">
		select <include refid="columns"/> from product
	</select>
	
	<select id="select" parameterType="int" resultMap="joinMap">
		select <include refid="columns"/> from product where product_id = #{product_id}
	</select>
	
	<!-- 무한루프의 흐름을 끊기 위해서는 더 이상 기존의 resultMap을 사용해선 안됨
			또다른 resultMap을 사용하거나 일일이 수동으로 가져와야 한다.
	<select id="selectOnlyProduct" parameterType="int" resultType="Prdouct">
		select <include refid="columns"/> from product where product_id = #{product_id}
	</select>
	-->
	
</mapper>