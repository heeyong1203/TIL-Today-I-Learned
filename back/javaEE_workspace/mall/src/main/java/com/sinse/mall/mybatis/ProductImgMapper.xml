<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProductImg">
	
	<insert id="insert" parameterType="ProductImg">
		insert into product_img(product_id, filename) values(#{product.product_id}, #{filename})
	</insert>
	
	<sql id="columns">
		product_img_id, filename, product_id
	</sql>
	
	<select id="selectByProductId" parameterType="int" resultType="ProductImg">
		select <include refid="columns"/> from product_img where product_id = #{product_id}
	</select>
	
</mapper>