<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Notice">
	
	<sql id="query">
		select notice_id, title, writer, content, regdate, hit
	</sql>

	
	<select id="selectAll" resultType="Notice">
		<include refid="query"></include> from notice
	</select>

	<select id="select" parameterType="int" resultType="Notice">
		<include refid="query"></include> from notice where notice_id = #{notice_id}
	</select>

	<select id="insert" parameterType="Notice">
		insert into Notice(title, writer, content) values (#{title}, #{writer}, #{content})
	</select>

	<select id="update" parameterType="Notice">
		update Notice set title=#{title}, writer=#{writer}, content=#{content} 
		where notice_id=#{notice_id}
	</select>

	<select id="delete" parameterType="int">
		delete from notice where notice_id = #{notice_id}
	</select>


</mapper>